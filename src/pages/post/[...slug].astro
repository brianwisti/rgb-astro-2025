---
import MarkdocImage from "@components/MarkdocImage.astro";
import PageLayout from "@layouts/PageLayout.astro";
import PostMetadata from "@components/PostMetadata.astro";

import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("posts");

    return posts.map((post) => ({
        params: {
            year: post.data.date.getFullYear().toString(),
            slug: post.id,
        },
        props: { post },
    }));
}

const { post } = Astro.props;
const { date, categories, tags, cover_image, title } = post.data;
const { Content } = await render(post);
---

<PageLayout {title}>
    <article>
        <header>
            {cover_image ? <MarkdocImage src={cover_image} alt="" /> : ""}
            <PostMetadata {date} {categories} {tags} />
        </header>
        <Content />
    </article>
</PageLayout>
