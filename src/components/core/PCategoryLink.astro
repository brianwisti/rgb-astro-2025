---
interface Props {
    href: string;
    classNames?: string;
}

const { href, classNames } = Astro.props;
let classes = "p-category";
if (classNames) {
    classes += ` ${classNames}`;
}
---

<a class={classes} {href}><slot /></a>

<style type="text/scss">
    a {
        background-color: var(--sand-1);
        border-radius: 0.25rem;
        color: var(--sand-9);
        display: inline-block;
        margin: 0 0.5rem;
        padding: 0.25rem 0.5rem;
        font-size: var(--font-size-1);
        text-decoration: none;

        &.category {
            font-weight: bold;
        }

        &.tag {
            font-style: italic;

            &::before {
                content: "#";
            }
        }
    }
</style>
