---
import Timestamp from './Timestamp.astro'

const { post } = Astro.props
---
<section>
    <header>
        <a href={`/post/${post.id}/`}>
            {post.data.title}
        </a>
    </header>
    <Timestamp date={post.data.date} />
</section>

<style>
    section {
        border-bottom: 1px solid var(--sand-3);
        margin-bottom: 1rem;
        padding-bottom: 1rem;
    }

    header {
        font-size: var(--font-size-3);
        margin-bottom: 0.5rem;
    }
</style>